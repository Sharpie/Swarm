include $(top_builddir)/etc/Makefile.common

INCLUDES = $(foreach module,. $(SWARMMODULES),-I$(top_srcdir)/src/$(module) -I$(top_builddir)/src/$(module)) -I$(top_srcdir)/src/gui/ -I$(top_builddir)/libobjc -I$(top_srcdir)/libobjc

builddir = $(shell cd ../../src; pwd)
libobjcdir = $(shell cd ../../libobjc; pwd)
javaswarmdir = $(shell cd ../../java/c; pwd)

JAVASWARMLIBS = @JAVASWARMLIBS@

ifeq ($(USEDLL),yes)
SWARMBUILDLDFLAGS = -L$(javaswarmdir) -R $(javaswarmdir) -L$(builddir)	\
-R $(builddir) -L$(libobjcdir) -R $(libobjcdir)
else
SWARMBUILDLDFLAGS = -L$(javaswarmdir) -R $(javaswarmdir) $(foreach	\
module,$(SWARMMODULES),-L$(builddir)/$(module) -R			\
$(builddir)/$(module)) -L$(libobjcdir) -\R $(libobjcdir)
endif

LDFLAGS = $(SWARMBUILDLDFLAGS) $(SUPPORTLDFLAGS)

LIBS = $(JAVASWARMLIBS) $(SWARMLIBS) $(OBJCLIBS) $(SYSLIBS) @LIBS@


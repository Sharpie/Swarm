prefix=@prefix@
datadir=@datadir@
jdkdir=@jdkdir@
INSTALL=@INSTALL@
jdkdir=@jdkdir@
jdkbindir=$(jdkdir)/bin
JAR=$(jdkbindir)/jar
JAVAC=$(jdkbindir)/javac
srcdir=@srcdir@
VPATH=$(srcdir)

include ../Makefile.common

CLASSES = Selector SwarmEnvironment GlobalZone
CLASSFILES = $(addsuffix .class,$(CLASSES))

SWARMCLASSFILES = $(addprefix swarm/,$(CLASSFILES))
GENCLASSFILES = $(addsuffix .class,$(foreach module,$(MODULES),$(addprefix swarm/$(module)/,$($(module)PROTOCOLS))))

all: $(CLASSFILES)
	for module in $(MODULES); do $(MAKE) -C $$module all; done
	cd .. ; JAVA_HOME=$(jdkdir) $(JAR) cf swarm/swarm.jar $(SWARMCLASSFILES) $(GENCLASSFILES)

install: all
	test -d $(datadir) || mkdir $(datadir)
	test -d $(datadir)/swarm || mkdir $(datadir)/swarm
	$(INSTALL) swarm.jar $(datadir)/swarm

%.class: %.java
	JAVA_HOME=$(jdkdir) $(JAVAC) -d .. -classpath $(jdkdir)/lib/classes.zip $<

prefix=@prefix@
datadir=@datadir@
jdkdir=@jdkdir@
INSTALL=@INSTALL@
JAR=@JAR@
JAVAC=@JAVAC@
srcdir=@srcdir@
VPATH=$(srcdir)

include ../Makefile.common

all: Selector.class
	for module in $(MODULES); do $(MAKE) -C $$module all; done
	cd .. ; $(JAR) cf swarm/swarm.jar swarm/Selector.class $(foreach module,$(MODULES),$(foreach protocol,$($(module)PROTOCOLS),swarm/$(module)/$(protocol).class))

install: all
	test -d $(datadir) || mkdir $(datadir)
	test -d $(datadir)/swarm || mkdir $(datadir)/swarm
	$(INSTALL) swarm.jar $(datadir)/swarm

%.class: %.java
	$(JAVAC) -d .. -classpath $(jdkdir)/lib/classes.zip $<

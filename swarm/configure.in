case ${host} in
        *-*-darwin*)
                OBJCFLAGS="$OBJCFLAGS -B \$(top_srcdir)/tools -F Cocoa"
		NESTLDFLAGS=-fnested-functions
		HOST_DARWIN=yes
                ;;
        *)
                ;;
esac

test -n "$OBJCFLAGS" || OBJCFLAGS="$CFLAGS"


	  JAVASWARM_DLL=
	  noinst_LIBS='lib$(MODULE).la' 
	  inst_LDFLAGS=
  else
	  LIBSWARM_LA=libswarm.la
	  SWARM_DLL=
	  LIBJAVASWARM_LA=lib${JAVASWARM_LIB_NAME}.la
	  JAVASWARM_DLL=
	  inst_LIBS='lib$(MODULE).la' 
      inst_LDFLAGS='-rpath $(DESTDIR)$(libdir) -version-info $(CURRENT):$(REVISION):$(AGE)'

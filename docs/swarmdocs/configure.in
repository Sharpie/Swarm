AC_INIT(protocol.el)

AM_INIT_AUTOMAKE(Swarmdocs, 0.0)

AC_ARG_WITH(swarm,dnl
changequote(<,>)dnl
  --with-swarm=DIR        Swarm in DIR [$(SWARMHOME)],dnl
changequote([,])dnl
  swarm_srcdir=$withval,dnl
  swarm_srcdir='$(SWARMHOME)')

if test -z "$DOCBOOK" ; then
  DOCBOOK=/DocBookStylesheets
fi

AC_ARG_WITH(stylesheet,dnl
changequote(<,>)dnl
  --with-stylesheet=DIR   DSSSL style sheets in DIR [${DOCBOOK:-/DocBookStyleSheets}],dnl
changequote([,])dnl
  stylesheets_srcdir=$withval,dnl
  stylesheets_srcdir=\$DOCBOOK)

AC_ARG_WITH(gridturtle,dnl
changequote(<,>)dnl
  --with-gridturtle=DIR   GridTurtle in DIR [$(swarm_srcdir)/../gridturtle],dnl
changequote([,])dnl
  gridturtle_srcdir=$withval,dnl
  gridturtle_srcdir=$swarm_srcdir/../gridturtle)

AM_CONFIG_HEADER(config.h)

AC_SUBST(swarm_srcdir)
AC_SUBST(stylesheets_srcdir)
AC_SUBST(gridturtle_srcdir)

AC_OUTPUT([Makefile swarmbook.dsl src/Makefile installing/Makefile overview/Makefile set/Makefile src/activity/Makefile src/analysis/Makefile src/collections/Makefile src/defobj/Makefile src/gui/Makefile src/objectbase/Makefile src/random/Makefile src/simtools/Makefile src/simtoolsgui/Makefile src/space/Makefile src/refbook.tex overview/overbook.tex installing/installbook.tex set/set.tex src/activity/activity.ent src/analysis/analysis.ent src/collections/collections.ent src/defobj/defobj.ent src/gui/gui.ent src/objectbase/objectbase.ent src/random/random.ent src/simtools/simtools.ent src/simtoolsgui/simtoolsgui.ent src/space/space.ent src/src.ent src/refbook.sgml set/set.sgml])